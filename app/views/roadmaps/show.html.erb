<div class="container mt-5">
  <div class="card shadow-lg rounded-4 border-0">
    <div class="card-body">
      <h1 class="card-title mb-4 text-primary fw-bold">üìã Roadmap Overview</h1>

      <h3 class="mb-3">üß≠ <span class="text-dark"><%= @roadmap.title %></span></h3>
      <p class="text-muted mb-4"><%= @roadmap.description %></p>

      <hr>
      <h4 class="mb-3">üö∂ Steps</h4>
      <% if @roadmap.roadmap_steps.any? %>
        <% if @roadmap.user == current_user %>
            <p>Your progress:</p>
            <div class="progress">
                <div
                    class="progress-bar"
                    role="progressbar"
                    aria-valuenow="<%= @progress %>"
                    aria-valuemin="0"
                    aria-valuemax="100"
                    style="width: <%= @progress %>%;">
                    <span class="sr-only"><%= @progress %>%</span>
                </div>
            </div>
        <% end %>
        <br>
        <div id="steps-list" class="row g-3">
        <% @roadmap.roadmap_steps.order(:position).each_with_index do |step, index| %>
            <% previous_step = step.dependency_step_id if index > 0%>
            <% locked = current_user && index > 0 && !current_user.completed_steps.exists?(id: previous_step) %>
            
            <div class="col-12 todo-card p-3 border rounded-3 position-relative <%= 'opacity-50' if locked %>" tabindex="0" data-url="<%= roadmap_step_path(step) %>" style="cursor:pointer;">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                    <strong>Step <%= index+1 %>:</strong> <%= step.title %>
                    <div class="text-muted"><%= step.description %></div>

                    <% step.step_resources.each do |resource| %>
                        <a href="<%= resource.url %>" class="btn btn-sm btn-outline-primary mt-2" target="_blank">üåê <%= URI.parse(resource.url).host rescue resource.url %></a>
                    <% end %>

                    <% if @roadmap.user == current_user %>
                        <div class="form-check mt-3">
                        <% if locked %>
                            <button class="btn btn-sm btn-outline-secondary" disabled title="Complete the previous step first">üîí Locked</button>
                        <% else %>
                            <% if current_user.completed_steps.include?(step) %>
                            <%= button_to "‚úÖ Mark Incomplete", roadmap_step_step_completion_path(step, current_user.step_completions.find_by(roadmap_step: step)), method: :delete, class: "btn btn-sm btn-outline-danger" %>
                            <% else %>
                            <%= button_to "‚¨ú Mark Complete", roadmap_step_step_completions_path(step), method: :post, class: "btn btn-sm btn-outline-success" %>
                            <% end %>
                        <% end %>
                        </div>
                    <% end %>
                    </div>

                    <div class="action-buttons d-flex flex-column">
                    <% if @roadmap.user == current_user %>
                        <%= button_to "‚¨ÜÔ∏è", move_up_roadmap_step_path(step), method: :patch, form_class: "d-inline mb-1", class: "btn btn-sm btn-outline-secondary" %>
                        <%= button_to "‚¨áÔ∏è", move_down_roadmap_step_path(step), method: :patch, form_class: "d-inline", class: "btn btn-sm btn-outline-secondary" %>
                        <%= link_to "View Step", roadmap_step_path(step),class: "btn btn-sm btn-outline-primary" %>
                    <% end %>
                    </div>
                </div>
            </div>
            
        <% end %>
        </div>
      <% else %>
        <p class="text-muted">No steps added yet. Start building your journey! ‚ú®</p>
      <% end %>

      <div class="mt-4">
        <%= link_to "‚ûï Add New Step",
                    new_roadmap_step_path(roadmap_id: @roadmap.id),
                    class: "btn btn-success" %>
        <%= link_to "‚¨ÖÔ∏è Back to Roadmaps",
                    roadmaps_path,
                    class: "btn btn-outline-secondary ms-2" %>
      </div>
    </div>
  </div>
</div>

<style>
.todo-card {
  background-color: #f8f9fa;      // light body background
  transition: background-color .2s, box-shadow .2s;
  cursor: pointer;
  outline: none;                  // we'll handle focus styles ourselves
  position: relative;
}

<%# .todo-card:hover, %>
.todo-card:focus-within {
  background-color: #e3f2fd;      // soft blue highlight
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.12);
}

/* Hide action-buttons until hover or focus */
.todo-card .action-buttons {
  opacity: 0;
  transition: opacity .2s;
}

<%# .todo-card:hover .action-buttons, %>
.todo-card:focus-within .action-buttons {
  opacity: 1;
}

/* Ensure the action-buttons sit in top-right */
.todo-card .action-buttons {
  position: absolute;
  top: 1rem;
  right: 1rem;
}

/* Tweak button sizing if needed */
.todo-card .action-buttons .btn {
  min-width: 2.5rem;
}
</style>