<h1>Roadmaps</h1>

<%= link_to 'New Roadmap', new_roadmap_path, class: 'button' %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roadmaps.each do |roadmap| %>
      <% if roadmap.public? || roadmap.user==current_user %>
        <tr>
            <td><%= roadmap.title %></td>
            <td><%= truncate(roadmap.description, length: 100) %></td>
            <td><%= link_to 'Show', roadmap_path(roadmap)  %></td>
            <td><%= link_to 'Edit', edit_roadmap_path(roadmap)if roadmap.user==current_user  %></td>
            <td><%= button_to 'Delete', roadmap_path(roadmap), method: :delete, data: { confirm: 'Are you sure?' } if roadmap.user==current_user %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
