<%= form_with(model: roadmap, local: true, class: "card shadow p-4 mt-5 container") do |form| %>
  <% if roadmap.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(roadmap.errors.count, "error") %> prevented this roadmap from being saved:</h5>
      <ul>
        <% roadmap.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label fw-semibold" %>
    <%= form.text_field :title, class: "form-control", placeholder: "e.g., Learn Rails" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label fw-semibold" %>
    <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Describe the roadmap..." %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box :public, class: "form-check-input" %>
    <%= form.label :public, class: "form-check-label" %>
  </div>

  <%= form.submit "Save Roadmap", class: "btn btn-primary" %>
<% end %>
