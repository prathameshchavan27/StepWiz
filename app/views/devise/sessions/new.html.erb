<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-lg p-4 rounded border-primary-subtle" style="min-width: 400px;">
    <div class="card-body">
      <h2 class="text-center text-primary fw-bold mb-4">üîê Log In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-semibold text-primary" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label fw-semibold text-primary" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
            <%= f.label :remember_me, class: "form-check-label", for: "remember_me" %>
          </div>
        <% end %>

        <div class="d-grid mb-3">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
