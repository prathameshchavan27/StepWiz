<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-lg p-4 border-primary-subtle rounded" style="max-width: 600px; width: 100%;">
    <div class="card-body">
      <h2 class="text-center text-primary fw-bold mb-4">ðŸš€ Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label fw-semibold text-primary" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Your Name" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-semibold text-primary" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label fw-semibold text-primary" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Create a password" %>
          <% if @minimum_password_length %>
            <div class="form-text"><%= @minimum_password_length %> characters minimum</div>
          <% end %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "form-label fw-semibold text-primary" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm your password" %>
        </div>

        <div class="d-grid mb-3">
          <%= f.submit "Sign up", class: "btn btn-success" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
