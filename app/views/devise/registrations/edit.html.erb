<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-lg p-4 border-primary-subtle rounded" style="max-width: 600px; width: 100%;">
    <div class="card-body">
      <h2 class="text-center text-primary fw-bold mb-4">ðŸ›  Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label fw-semibold text-primary" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Your Name" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-semibold text-primary" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-warning">
            Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :password, class: "form-label fw-semibold text-primary" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New password (optional)" %>
          <% if @minimum_password_length %>
            <div class="form-text"><%= @minimum_password_length %> characters minimum</div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label fw-semibold text-primary" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm new password" %>
        </div>

        <div class="mb-4">
          <%= f.label :current_password, class: "form-label fw-semibold text-primary" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Current password" %>
          <div class="form-text">We need your current password to confirm your changes.</div>
        </div>

        <div class="d-grid mb-3">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      <% end %>

      <hr>

      <h4 class="text-danger text-center mt-4">ðŸš« Cancel My Account</h4>
      <div class="text-center mb-3">
        <%= button_to "Cancel my account", registration_path(resource_name),
                      data: { confirm: "Are you sure you want to delete your account?", turbo_confirm: "Are you sure?" },
                      method: :delete,
                      class: "btn btn-outline-danger" %>
      </div>

      <div class="text-center">
        <%= link_to "â¬…ï¸ Back", :back, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
